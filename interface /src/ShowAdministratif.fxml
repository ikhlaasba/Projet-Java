<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="462.0" prefWidth="680.0" style="-fx-background-color: #82a1cd;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ShowAdministratifController">
    <children>
        <!-- Title Label -->
        <Label layoutX="230.0" layoutY="20.0" text="Show Administratif" textFill="#110b61">
            <font>
                <Font name="Sylfaen" size="27.0" />
            </font>
        </Label>
        
        <!-- Administratif Table -->
        <TableView fx:id="administratifTable" layoutX="30.0" layoutY="70.0" prefHeight="300.0" prefWidth="620.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="nomColumn" prefWidth="75.0" text="Nom" />
                <TableColumn fx:id="prenomColumn" prefWidth="75.0" text="Prenom" />
                <TableColumn fx:id="salaireColumn" prefWidth="75.0" text="Salaire" />
                <TableColumn fx:id="horaireDeTravailColumn" prefWidth="75.0" text="Horaire de Travail" />
                <TableColumn fx:id="responsabiliteColumn" prefWidth="75.0" text="Responsabilité" />
                <TableColumn fx:id="numeroBureauColumn" prefWidth="75.0" text="Numéro Bureau" />
            </columns>
        </TableView>
        
        <!-- Back Button -->
        <Button fx:id="backToMenuButton" layoutX="290.0" layoutY="380.0" prefHeight="46.0" prefWidth="100.0" text="BACK" onAction="#goToMainMenu" />
    </children>
</AnchorPane>