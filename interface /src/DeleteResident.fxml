<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="462.0" prefWidth="473.0" 
            style="-fx-background-color: #82a1cd;" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="DeleteResidentController">
    <children>
        <!-- Title Label -->
        <Label layoutX="98.0" layoutY="20.0" text="DELETE A RESIDENT" textFill="#110b61">
            <font>
                <Font name="Sylfaen" size="27.0" />
            </font>
        </Label>

        <!-- Resident ID -->
        <TextField fx:id="idResident" layoutX="133.0" layoutY="100.0" prefHeight="35.0" prefWidth="208.0" promptText="Enter Resident ID"
                   style="-fx-border-color: transparent; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 5; -fx-background-insets: 0, 0, 1, 2;">
            <font>
                <Font name="System" size="16.0" />
            </font>
        </TextField>

        <!-- Buttons in HBox -->
        <HBox layoutX="133.0" layoutY="180.0" spacing="20.0" alignment="CENTER">
            <children>
                <!-- Delete Resident Button -->
                <Button fx:id="deleteButton" prefHeight="46.0" prefWidth="100.0" text="DELETE"
                        style="-fx-background-color: white; -fx-text-fill: #5381E6; -fx-font-size: 16; -fx-font-family: Times New Roman; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-width: 2;"
                        onAction="#handleDeleteResident" />
                <!-- Back to Main Menu Button -->
                <Button fx:id="backToMenuButton" prefHeight="46.0" prefWidth="100.0" text="BACK"
                        style="-fx-background-color: white; -fx-text-fill: #5381E6; -fx-font-size: 16; -fx-font-family: Times New Roman; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-width: 2;"
                        onAction="#goToMainMenu" />
            </children>
        </HBox>
    </children>
</AnchorPane>
