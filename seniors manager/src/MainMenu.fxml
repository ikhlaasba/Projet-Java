<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainMenuController" prefHeight="462" prefWidth="472" style="-fx-background-color: #82a1cd;">
    <VBox spacing="20" alignment="CENTER" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50">
        <!-- Welcome Label -->
        <Label fx:id="welcomeLabel" text="Welcome, User" textFill="#110b61">
            <font>
                <Font name="Sylfaen" size="24.0"/>
            </font>
        </Label>

        <!-- Personnel Button -->
        <Button fx:id="personnelButton" prefHeight="46" prefWidth="200" text="Personnel" onAction="#goToPersonnel"
                style="-fx-background-color: white; -fx-text-fill: #5381E6; -fx-font-size: 16; -fx-font-family: Times New Roman; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-width: 2;"/>

        <!-- Service Button -->
        <Button fx:id="serviceButton" prefHeight="46" prefWidth="200" text="Service" onAction="#goToService"
                style="-fx-background-color: white; -fx-text-fill: #5381E6; -fx-font-size: 16; -fx-font-family: Times New Roman; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-width: 2;"/>

        <!-- Rooms Button -->
        <Button fx:id="roomsButton" prefHeight="46" prefWidth="200" text="Rooms" onAction="#goToRooms"
                style="-fx-background-color: white; -fx-text-fill: #5381E6; -fx-font-size: 16; -fx-font-family: Times New Roman; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-width: 2;"/>

        <!-- Other Button -->
        <Button fx:id="ResidentButton" prefHeight="46" prefWidth="200" text="Resident" onAction="#goToResident"
                style="-fx-background-color: white; -fx-text-fill: #5381E6; -fx-font-size: 16; -fx-font-family: Times New Roman; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-width: 2;"/>
    </VBox>
</AnchorPane>
