<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="ServiceController" prefHeight="462" prefWidth="472" style="-fx-background-color: #82a1cd;">
    <VBox spacing="20" alignment="CENTER" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50">
        <!-- Add Button -->
        <Button fx:id="addButton" prefHeight="46" prefWidth="200" text="Add" onAction="#handleAdd"
                style="-fx-background-color: white; -fx-text-fill: #5381E6; -fx-font-size: 16; -fx-font-family: Times New Roman; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-width: 2;"/>

        <!-- Update Button -->
        <Button fx:id="updateButton" prefHeight="46" prefWidth="200" text="Update" onAction="#handleUpdate"
                style="-fx-background-color: white; -fx-text-fill: #5381E6; -fx-font-size: 16; -fx-font-family: Times New Roman; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-width: 2;"/>

        <!-- Delete Button -->
        <Button fx:id="deleteButton" prefHeight="46" prefWidth="200" text="Delete" onAction="#handleDelete"
                style="-fx-background-color: white; -fx-text-fill: #5381E6; -fx-font-size: 16; -fx-font-family: Times New Roman; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-width: 2;"/>

        <!-- Show Button -->
        <Button fx:id="showButton" prefHeight="46" prefWidth="200" text="Show" onAction="#handleShow"
                style="-fx-background-color: white; -fx-text-fill: #5381E6; -fx-font-size: 16; -fx-font-family: Times New Roman; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-width: 2;"/>
    </VBox>
</AnchorPane>
